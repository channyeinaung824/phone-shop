generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(SELLER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  SELLER
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  brand     String
  model     String
  price     Decimal
  stock     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  category  Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}
